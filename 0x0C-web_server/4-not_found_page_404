#!/usr/bin/env bash
# Configure your Nginx server to have a custom 404 page that contains the string Ceci n'est pas une page

# Create the HTML file for the new location
mkdir -p /var/www/html/new_location
echo "This is the new location." > /var/www/html/new_location/index.html

# Create the HTML file for the custom 404 page
echo "Ceci n'est pas une page." > /var/www/html/404.html

# Configure Nginx to set up redirection and custom 404 page
cat > /etc/nginx/sites-available/default <<EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;
    server_name _;

    location /redirect_me/ {
        return 301 http://\$host/new_location/;
    }

    location /new_location/ {
        return 200 "This is the new location.";
    }

    error_page 404 /404.html;
    location = /404.html {
        internal;
    }
}
EOF

# Restart Nginx
service nginx stop
nginx -g "daemon off;"
