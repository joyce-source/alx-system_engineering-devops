#!/bin/bash
# Configure your Nginx server so that /redirect_me is redirecting to another page.
# Install Nginx
apt-get update
apt-get install -y nginx
# Create the HTML file for the new location
mkdir -p /var/www/html/new_location
echo "This is the new location." > /var/www/html/new_location/index.html

# Configure Nginx to listen on port 80 and set up redirection
cat > /etc/nginx/sites-available/default <<EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;
    server_name _;

    location /redirect_me/ {
        return 301 http://\$host/new_location/;
    }

    location /new_location/ {
        return 200 "This is the new location.";
    }

    location / {
        return 301 http://\$host/redirect_me/;
    }
}
EOF

# Remove the default Nginx configuration symlink
rm /etc/nginx/sites-enabled/default

# Create a new symlink to the modified configuration
ln -s /etc/nginx/sites-available/default /etc/nginx/sites-enabled/

#Restart Nginx
service nginx stop
nginx -g "daemon off;"
